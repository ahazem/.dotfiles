# This allows using Prolog graphics if you use Terminal.app
# if [ -z "$DISPLAY" ]; then export DISPLAY=:0; fi

# Vim aliases
alias vim='mvim -v'

# tmux
[ -n "$TMUX" ] && export TERM=screen-256color
